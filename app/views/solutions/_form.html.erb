
<div class="row">
  <%= simple_form_for([@project, @goal, @goal.solutions.build]) do |f| %>

    <% ref_id = solutions_ref(@goal) %>

      <div class="form-inputs">
        <%= f.input :status, collection: ["In Progress", "Closed", "Researching"], prompt: "Select Status", :wrapper => :full_input %>
      </div>
   <div class="form-inputs">
     <%= f.input :ref, as: :hidden, input_html: {value: ref_id || '00'} %>

   </div>

    <div class="form-inputs">
      <%= f.input :description, :wrapper => :full_input %>
    </div>

    <div class="form-actions col s12">
      <%= f.button :submit %>
    </div>
<% end %>

</div>
