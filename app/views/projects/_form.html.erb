<% sender = '' if local_assigns[:sender].nil? %>

<div class="row">
  <%= form_for(project, class: "col s12") do |f| %>
      <div class="input-field col s6">
        <%= f.check_box :public %>
        <%= f.label :public %>
      </div>

      <div class="input-field col s6">
        <% if sender == 'new' %>
            <%= f.text_field :reference, :value => project_id %>
        <% else %>
            <%= f.text_field :reference %>
        <% end %>
        <%= f.label :reference %>
      </div>

      <div class="input-field col s10">
        <%= f.collection_select(:customer_id, Customer.all, :id, :display_title, {:prompt => 'Select Customer'}) %>
        <%= f.label :customer %>
      </div>
      <div class="col s2">
        <br>
      <%= link_to new_customer_path(project), class: 'waves-effect waves-orange btn-flat' do %>
            <i class="material-icons">add</i>
        <% end %>
      </div>



      <div class="input-field col s12">
        <%= f.text_field :name %>
        <%= f.label :name %>
      </div>





      <div class="input-field col s12">
        <%= f.text_area :description, :class => "materialize-textarea" %>
        <%= f.label :description %>
      </div>



      <div class="actions">
      <%= f.submit :class => "waves-effect waves-orange btn-flat" %>
      </div>
      </div>
  <% end %>
