<br>

<%= render partial: @project.customer %>

<h2>


  <%= @project.name %> <small> <%= @project.reference %></small>
</h2>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
<br><br>

<!-- Goals -->
<%= link_to "New Goal", new_project_goal_path(@project) %>
<br>
<% if @project.goals.any? %>
<% @project.goals.each do |goal| %>
<%= goal.problem %>
<%= goal.id %>
<%= link_to "Edit", edit_project_goal_path(@project, goal) %>
<br>
<% end %>
<% else %>
<h3><small>
  No Goals Found
</small></h3>
<% end %>
<!-- End of Goals -->
